<div class="panel panel-default col-md-3">
  <% unless dog.avatar.file.nil? %>
    <div class="panel-heading">
     <div class="text-center">
      <%= image_tag dog.avatar.url, size: 200 %>
     </div>
   </div>
  <% end %>
  <div class="panel-body">
    <h5>
      <%= link_to dog.name, edit_dog_path(id: dog.id) %>
      <span class="text-muted">Owner: <%= dog.owner %> | <%= dog.gender %> <%= dog.breed %></span>
    </h5>
    <div>
      <% if dog.active? %>
        <p>Here for Daycare! <br/> <%= link_to 'Toggle', active_path(id: dog.id), class: 'btn btn-warning' %></p>
      <% else %>
        <%= link_to 'Add to Daycare', active_path(id: dog.id), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
