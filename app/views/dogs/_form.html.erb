<%= simple_form_for(@dog, html: { class: 'form-group' }) do |f| %>
  <div class="col-md-6">
  <%= f.input :name %>
  <%= f.input :owner %>
  <%= f.input :gender, collection: ['Neutered', 'Spayed', 'Unaltered Male', 'Unaltered Female'] %>
  <%= f.input :breed %>
  <%= f.input :temperament, label: 'Personality Notes' %>
  <%= f.input :friends, label: 'Gets Along Well With:' %>
  </div>
  <div class="col-md-6">
  <%= f.input :housing, label: 'Housing Notes' %>
  <%= f.input :birthday, required: false %>
  <%= f.input :avatar %>
  <%= f.input :active, input_html: { :checked => true } %>
  <%= f.button :submit, class: "btn btn-default" %>
  </div>
<% end %>
